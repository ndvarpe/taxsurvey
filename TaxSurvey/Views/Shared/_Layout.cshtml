<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="@Url.Content("~/Content/fontawesome/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")">
    <link href="@Url.Content("~/Content/checkbox-radio.css")" rel="stylesheet">
</head>
<body ng-app="formApp">
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- JS -->
    <!-- load angular, nganimate, and ui-router -->
    <script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-ui-router.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-animate.min.js")"></script>
    <script src="@Url.Content("~/app/survey/app.js")"></script>
    <script src="@Url.Content("~/app/survey/questions.factory.js")"></script>
    <script src="@Url.Content("~/app/survey/form.controller.js")"></script>
    <script src="@Url.Content("~/app/survey/question.controller.js")"></script>
    <link rel="shortcut icon" href="favicon.ico">
</body>
</html>
